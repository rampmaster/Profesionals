<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Profesionals!{% endblock %}</title>
        <script type="text/javascript" src="{{ asset('bundles/coreresources/js/jquery.js') }}"></script>
        <link type="text/css" href="{{ asset('bundles/coreresources/css/bootstrap.min.css') }}" rel="stylesheet" />
        {% block stylesheets %}{% endblock %}
        {% block header_scripts %}{% endblock %}
        {% block extra %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container" style="width: auto;">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Profesionals</a>
                <div class="nav-collapse">


                        {% if app.user is not empty %}
                            {% if app.user.hasRole('ROLE_PROFESIONAL') %}
                                <ul class="nav">
                                    <li class="active"><a href="#">Home</a></li>
                                    <li><a href="{{ path('profesional_consulta') }}">Area de consulta</a></li>
                                    <li><a href="{{ path('profesional_clientes') }}">Mis clientes</a></li>
                                    <li><a href="{{ path('profesional_settings') }}">Area personal</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>

                                </ul>
                            {% endif %}
                            {% if app.user.hasRole('ROLE_CLIENTE') %}
                                <ul class="nav">
                                    <li class="active"><a href="#">Home</a></li>
                                    <li><a href="{{ path('client_consulta') }}">Area de consulta</a></li>
                                    <li><a href="{{ path('client_settings') }}">Area personal</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>

                                </ul>
                            {% endif %}
                        {% else %}
                        <ul class="nav">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#">Consulta</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="{{ path('fos_user_security_login') }}">Acceder</a></li>

                        </ul>
                        {% endif %}

                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div>
    <div class="clear:both"></div>
    <div class="container" style="margin-top:100px">
        <div class="row">
            {% block panel %}{% endblock %}
        </div>
    </div>
    </body>
</html>
