"></div>
<div class="background-main" style="
    opacity: 0.4;
    position: absolute;
    width: 100%;
    height: 100%;
"></div>

<div class="container">
    <div class="login-wrapper" style="margin-top: 120px">
        <div style="text-align: center">
            {% if app.session.get('subdomain') %}
            <img src="{{asset('images/styles')}}/{{app.session.get('subdomain')}}/logo.png" width="100%" style="width:100%">
            {% else %}
            <i class="icon-facetime-video logo-icon"></i>
            {% endif %}

        </div>

        <div id="login-manager">
            <div id="login" class="login-wrapper animated">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <div class="input-group control-extra">
                        {% block fos_user_content %}
                        {% endblock fos_user_content %}
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

<script type="text/html" id="template-notification">
    <div class="notification animated fadeInLeftMiddle fast hide">
        <div class="left">
            <div style="background-image: url({{ asset('bundles/coreresources/theme/images/cloud.png') }})"
                 class="img border"></div>
        </div>
        <div class="right">
            <div class="inner">Bienvenidos</div>
            <div class="time">Accede desde aqui</div>
        </div>

        <i class="icon-remove-sign hide"></i>
    </div>
</script>
<script type="text/html" id="template-notifications">
    <div class="container">
        <div class="row" id="notifications-wrapper">
            <div id="notifications" class=" notifications animated">
                <div id="dismiss-all" class="dismiss-all button blue">Cancelar</div>
                <div id="content">
                    <div id="notes"></div>
                </div>
            </div>
        </div>
    </div>
