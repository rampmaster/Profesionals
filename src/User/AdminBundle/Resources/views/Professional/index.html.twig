{% set active = 'professional' %}
{% extends 'UserAdminBundle::layout.html.twig' %}
{% block panel %}
    <div class="span12">
        <div class="box">
            <div class="tab-header">
                <i class="icon-th-list"></i> Profesionales
            </div>
            <div class="padded">
                Espacio de Gestión y administración de profesionales

            </div>
        </div>
    </div>

    <div class="row-fluid">
        {% for user in professionals %}
            <div class="span4">
                <div class="black-box">
                    <div class="tab-header">
                        <i class="icon-user"></i> {{ user.name }} {{ user.surname }}
                    </div>
                    <div class="padded">
                        <div class="span8">
                        <div class="profilepic pull-left">
                        <img src="{{ asset(user.webPath) }}" style="height: 120px" height="110px">
                        </div>
                        </div>
                        <div class="span4">
                            <a class="btn btn-success btn-block" href="{{ path('admin_professionals_edit',{id:user.id}) }}"><i class="icon-edit"></i>
                                Modificar</a><br>
                            <a class="btn btn-block" href="{{ path('admin_professionals_styles',{id:user.id}) }}"><i class="icon-wrench"></i>
                                Estilos</a><br>
                            <a class="btn btn-primary btn-block" href="{{ path('admin_professionals_show', {'id': user.id}) }}">
                                <i class="icon-arrow-right"></i>
                                Ver más
                            </a>

                        </div>
                        
                    </div>
                    <div style="clear:both; padding-top: 15px"></div>
                </div>
            </div>

        {% else %}
            <li><b>No existen clientes</b></li>
        {% endfor %}
    </div>



{% endblock %}

{% block nav_secondary %}
    {% include 'UserAdminBundle:Professional:menu.html.twig' %}
{% endblock %}