{% set active = 'professional' %}
{% extends 'UserAdminBundle::layout.html.twig' %}
{% block panel %}


<br>
<h5 class="widget-name">
    <i class="icon-table"></i> Profesionales
</h5>
<div class="widget">
    <div class="table-overflow">
        <table class="table table-striped table-bordered table-checks media-table dataTable">
            <thead>
                <tr role="row">
                    <th class="sorting_disabled" width="10%">Foto</th>
                    <th class="sorting_disabled" width="70%">Nombre</th>
                    <th class="sorting_disabled" width="20%">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for user in professionals %}
                <tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
                    <td class="  sorting_1"><a href="" title="" class="lightbox"><img src="{{ asset(user.webPath) }}" style="width: 50px" width="50px"></a></td>
                    <td class=" ">{{ user.name }} {{ user.surname }}</td>
                    <td class=" ">
                        <ul class="navbar-icons">
                            <li><a href="{{ path('admin_professionals_edit', {'id': user.id}) }}" data-toggle="tooltip" title="Editar"><i class="icon-edit" style="font-size:22px; padding-right:20px;"></i></a></li>
                            <li><a href="{{ path('admin_professionals_styles', {'id': user.id}) }}" data-toggle="tooltip" title="Estilos"><i class="icon-wrench" style="font-size:22px;padding-right:20px;"></i></a></li>
                            <li><a href="{{ path('admin_professionals_show', {'id': user.id}) }}" data-toggle="tooltip" title="Ver Info"><i class="icon-circle-arrow-right" style="font-size:22px"></i></a></li>
                        </ul>
                    </td>
                </tr>
                {% else %}
                <li><b>No existen clientes</b></li>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>




{% endblock %}

{% block section_nav %}
    {% include 'UserAdminBundle:Professional:menu.html.twig' %}
{% endblock %}