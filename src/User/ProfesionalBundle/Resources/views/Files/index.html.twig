{% set active = 'files' %}
{% extends '::layout.html.twig' %}
{% block panel %}
    <ul class="round-buttons">
        <li><div class="depth"><a href="{{ path('profesional_files') }}" data-toggle="tooltip" data-original-title="Lista de archivos"><i class="icon-list"></i> Lista de  Archivos<strong></strong></a></div></li>
        <li><div class="depth"><a href="{{ path('profesional_files_add') }}" data-toggle="tooltip" data-original-title="Añadir archivo"><i class="icon-plus"></i> Añadir Archivo<strong></strong></a></div></li>
    </ul>

    <h5 class="widget-name">
        <i class="icon-table"></i> Mis archivos
    </h5>

    <div class="widget">
        <div class="table-overflow">
            <table class="table table-striped table-bordered table-checks media-table dataTable">
                <thead>
                <tr role="row">
                    <th class="sorting_disabled" width="20%">Nombre</th>
                    <th class="sorting_disabled" width="60%">Información</th>
                    <th class="sorting_disabled" width="10%">Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for file in app.user.files %}
                <tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
                    <td class=" ">{{ file.title }}</td>
                    <td class="file-info">
                        <span><strong>Tamaño:</strong> {{ file.sizeHum }}</span>
                        <span><strong>Tipo de acceso:</strong> {% if file.public %}Acceso público{% else %}Acceso restringido{% endif %}</span>
                        <span><strong>Fecha de creacion:</strong> {{ file.createdAt|date('d-m-Y') }}</span>
                    </td>
                    <td class=" ">
                        <ul class="navbar-icons">
                            <li><a href="{{ path('core_fileserver_downloader', { 'hash': file.hash }) }}" class="tip" title="" data-original-title="Descargar"><i class="icon-download" style="font-size:22px"></i></a></li>
                            <li><a href="{{ path('profesional_files_edit_permissions', { 'hash': file.hash }) }}" class="tip" title="" data-original-title="Ver más"><i class="icon-circle-arrow-right" style="font-size:22px"></i></a></li>
                            <!--<li><a href="/app_dev.php/profesional/clientes/show/1" class="tip" title="" data-original-title="Editar Perfil"><i class="icon-cog"></i></a></li>-->
                        </ul>
                    </td>
                </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>
    </div>
{% endblock %}