        <form method="post" class="form form-horizontal" {{form_enctype(form) }}>
        <fieldset>

                        <!-- General form elements -->
                        <div class="widget row-fluid">

                            <div class="well">
                                {{ form_rest(form) }}
                                
                            </div>
                        </div>
                        <!-- /general form elements -->

                    </fieldset>
            <div style="text-align:center">
                <input type="submit" class="btn button blue" value="Registrar informe">
            </div>
        </form>
    </div>
</div>

{% endblock %}
