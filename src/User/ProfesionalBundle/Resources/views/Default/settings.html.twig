{% extends 'UserProfesionalBundle:Default:settings_layout.html.twig' %}
{% set secondary_active = 'settings' %}
{% block panel %}

    <div class="row-fluid">
        <div class="span12 wizard">
            <div class="box">
                <div class="tab-header">
                    Mis datos personales
                <span class="pull-right">
                  <span class="options">
                    <a href="#"><i class="icon-cog"></i></a>
                  </span>
                </span>
                </div>

                <form method="post" class="fill-up" {{ form_enctype(form) }}>
                    <div class="padded">
                        {% if app.user.webPath is not empty %}
                            <img src="{{ asset(app.user.webPath) }}" width="100px" style="width: 100px"
                                 class="pull-right">
                            <div style="clear:both"></div>

                            <hr>
                        {% endif %}
                        {{ form_widget(form) }}
                    </div>
                    <div class="form-actions">
                        <input type="submit" class="btn button gray span3" value="Actualizar datos">


                    </div>

                </form>
            </div>
        </div>

    </div>


{% endblock %}


{% block nav_secondary %}{% endblock %}
