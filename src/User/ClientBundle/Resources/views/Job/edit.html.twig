{% extends 'UserClientBundle::layout.html.twig' %}
{% set active = 'jobs' %}
{% form_theme edit_form 'CoreResourcesBundle:Form:fields.html.twig' %}

{% block section -%}
    <h1>Job edit</h1>

    <form action="{{ path('jobs_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('jobs') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('jobs_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
